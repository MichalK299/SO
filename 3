#!/bin/bash
function oblicz {
        local suma=0
        local iloczyn=1
        for a in "$@"
        do
                suma=$((suma + a))
                iloczyn=$((iloczyn * a))
        done
        echo $suma $iloczyn
}

wynik=$(oblicz 2 4 6)

echo "wynik: $wynik"






