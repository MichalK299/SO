#!/bin/bash

opcja=$1
nazwa=$2

function fun1 {
        if [ -d $nazwa ]; then
                rm -r $nazwa
        else
                mkdir $nazwa
        fi
}

function fun2 {
        echo $HOME > $nazwa
}

function fun3 {
        echo "FUNKCJA 3"
}

if [ "$opcja" = "1" ]; then
    funkcja1
elif [ "$opcja" = "2" ]; then
    funkcja2
else [ "$opcja" = "3" ]; then
    funkcja3
fi



